BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(int(input_number.text, 1))
            Button:
                text: 'Down'
                on_press: app.handle_increment(int(input_number.text, -1))
    Button:
        text: 'Convert mi to km'
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (0, 1, 0, 1)
